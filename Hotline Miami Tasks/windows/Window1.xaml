<Window x:Class="Hotline_Miami_Tasks.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotline_Miami_Tasks"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="#FF5F343B">
        
        <Label Content="{Binding TaskLabel}" Background="#FFEAB4E0" HorizontalAlignment="Center" 
               Height="107" Margin="0,59,0,0" VerticalAlignment="Top" 
               Width="620" FontSize="18" RenderTransformOrigin="0.5,0.5"/>
        
        <Button Content="1 lvl" HorizontalAlignment="Left" 
                Height="54" Margin="90,325,0,0" VerticalAlignment="Top" 
                Width="129"
                Background="#FFEAB4E0"/>
        
        <Button Content="2 lvl" HorizontalAlignment="Center" 
                Height="54" Margin="0,325,0,0" VerticalAlignment="Top"
                Width="128"
                Background="#FFEAB4E0"/>
        
        <Button Content="3 lvl" HorizontalAlignment="Left" 
                Height="54" Margin="581,325,0,0" VerticalAlignment="Top" 
                Width="129"
                Background="#FFEAB4E0"/>






    </Grid>
</Window>
